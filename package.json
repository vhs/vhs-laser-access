{
  "name": "laser-access",
  "version": "0.1.0",
  "description": "VHS Laser Access",
  "scripts": {
    "prepare": "wireit",
    "start": "wireit",
    "test": "wireit",
    "lint": "wireit",
    "build": "wireit"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "crypto-js": "^4.2.0",
    "debug": "~4.4.0",
    "express": "~4.21.2",
    "fastify": "^5.6.1",
    "fastify-socket": "^5.1.4",
    "mqtt": "^4.3.7",
    "onoff": "^6.0.3",
    "promise": "~6.1.0",
    "pug": "^3.0.3",
    "socket.io": "^4.8.1",
    "underscore": "^1.8.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/crypto-js": "^4.1.0",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^24.9.1",
    "@types/pug": "^2.0.10",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.0",
    "bower": "^1.8.14",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "jshint": "^2.13.6",
    "jshint-stylish": "^2.2.1",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "typescript": "^5.6.2",
    "wireit": "^0.14.9"
  },
  "jshintConfig": {
    "node": true,
    "esversion": "6",
    "globalstrict": true,
    "asi": true,
    "globals": {
      "describe": false,
      "it": false,
      "before": false,
      "beforeEach": false,
      "after": false,
      "afterEach": false
    }
  },
  "author": "Garth Cumming",
  "license": "ISC",
  "wireit": {
    "test": {
      "command": "NODE_ENV=test nyc mocha --reporter nyan test/*.test.js",
      "dependencies": [
        "build"
      ]
    },
    "lint": {
      "command": "jshint --reporter=node_modules/jshint-stylish src"
    },
    "start": {
      "command": "node dist/main.js",
      "service": true,
      "dependencies": [
        "prepare",
        "build"
      ]
    },
    "build": {
      "command": "tsc -p tsconfig.json"
    },
    "prepare": {
      "dependencies": [
        "bower:install"
      ]
    },
    "bower:install": {
      "command": "bower install"
    }
  }
}
