{
  "name": "laser-access",
  "version": "0.1.0",
  "description": "VHS Laser Access",
  "scripts": {
    "prepare": "wireit",
    "start": "wireit",
    "watch": "wireit",
    "test": "wireit",
    "lint": "wireit"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "debug": "~4.4.0",
    "express": "~4.21.2",
    "jade": "^1.9.2",
    "mqtt": "^4.3.7",
    "onoff": "^6.0.3",
    "promise": "~6.1.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.0",
    "socket.io": "^4.8.1",
    "superagent": "~10.1.1",
    "superagent-promise": "^0.2.0",
    "supervisor": "~0.6.0",
    "underscore": "^1.8.2"
  },
  "devDependencies": {
    "bower": "^1.8.14",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "jshint": "^2.13.6",
    "jshint-stylish": "^2.2.1",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "supertest": "^7.0.0",
    "wireit": "^0.14.9"
  },
  "jshintConfig": {
    "node": true,
    "esversion": "6",
    "globalstrict": true,
    "asi": true,
    "globals": {
      "describe": false,
      "it": false,
      "before": false,
      "beforeEach": false,
      "after": false,
      "afterEach": false
    }
  },
  "author": "Garth Cumming",
  "license": "ISC",
  "wireit": {
    "test": {
      "command": "NODE_ENV=test nyc yarn run mocha --reporter nyan test/*.test.js"
    },
    "lint": {
      "command": "yarn run jshint --reporter=node_modules/jshint-stylish src"
    },
    "watch": {
      "command": "node_modules/.bin/supervisor bin/www",
      "service": true
    },
    "start": {
      "command": "node_modules/.bin/supervisor -w src/app.js bin/www",
      "service": true
    },
    "prepare": {
      "dependencies": [
        "bower:install"
      ]
    },
    "bower:install": {
      "command": "bower install"
    }
  }
}
